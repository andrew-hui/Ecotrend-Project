@model IEnumerable<EcoTrend_Industry_Project.ViewModels.SupplierDetailsVM>

@{
    ViewBag.Title = "View All suppliers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Suppliers Directory</h2>
<hr />
<div style="overflow-x:auto;">
    <table id="table_id" class="display cell-border">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a href="../Admin/EditSupplier?supplierID=@Html.DisplayFor(modelItem => item.SupplierID)">Edit <span class="glyphicon glyphicon-pencil" title="Edit"></span></a> |
                        <a href="../Admin/SupplierDetails?supplierID=@Html.DisplayFor(modelItem => item.SupplierID)">View <span class="glyphicon glyphicon-list-alt" title="View"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  </div>
