@model EcoTrend_Industry_Project.ViewModels.SupplierAndSalesRepVM

@{
    ViewBag.Title = "Reset Password Area";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>@ViewBag.Title</h2>
<hr />
<table id="table_id" class="display cell-border">
    <thead>
        <tr>
            @foreach (EcoTrend_Industry_Project.ViewModels.PasswordResetVM item in Model.SalesRepsPasswordReset)
            {
                <th>
                    @Html.DisplayNameFor(model => item.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.UserRole)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.LockoutStatus)
                </th>
                <th style="text-align: center;">
                    @Html.DisplayNameFor(model => item.AccessFailedCount)
                </th>
                <th></th>
                break;
            }
        </tr>
    </thead>
    <tbody>
        @foreach (EcoTrend_Industry_Project.ViewModels.PasswordResetVM item in Model.SalesRepsPasswordReset)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                @if (item.LockoutStatus != null)
                {
                    @Html.Raw("<td style='color:red;'>Disabled</td>");
                }
                else
                {
                    @Html.Raw("<td style='color:green;'>Enabled</td>");
                }
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.AccessFailedCount)
                </td>
                <td>
                    <a href="../Admin/ResetPasswordByEmail?email=@Html.DisplayFor(modelItem => item.Email)">Reset Password <span class="glyphicon glyphicon-refresh" title="Reset Password"></span></a>
                </td>
            </tr>
        }


        @foreach (EcoTrend_Industry_Project.ViewModels.PasswordResetVM item in Model.SuppliersPasswordReset)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                @if (item.LockoutStatus != null)
                {
                    @Html.Raw("<td style='color:red;'>Disabled</td>");
                }
                else
                {
                    @Html.Raw("<td style='color:green;'>Enabled</td>");
                }
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.AccessFailedCount)
                </td>
                <td>
                    <a href="../Admin/ResetPasswordByEmail?email=@Html.DisplayFor(modelItem => item.Email)">Reset Password <span class="glyphicon glyphicon-refresh" title="Reset Password"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
